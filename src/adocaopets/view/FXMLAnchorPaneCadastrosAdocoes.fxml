<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="adocaopets.controller.FXMLAnchorPaneCadastrosAdocoesController"
            prefHeight="600.0" prefWidth="800.0">
    
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    
    <VBox spacing="10">
        <HBox spacing="10">
            <Button fx:id="buttonInserir" text="Inserir" onAction="#handleButtonInserir"/>
            <Button fx:id="buttonAlterar" text="Alterar" onAction="#handleButtonAlterar"/>
            <Button fx:id="buttonRemover" text="Remover" onAction="#handleButtonRemover"/>
        </HBox>
        
        <TableView fx:id="tableViewAdocoes" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tableColumnAdocaoId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="tableColumnAdocaoUsuario" text="Usuário" prefWidth="200"/>
                <TableColumn fx:id="tableColumnAdocaoPet" text="Pet" prefWidth="200"/>
                <TableColumn fx:id="tableColumnAdocaoData" text="Data" prefWidth="100"/>
            </columns>
        </TableView>
        
        <GridPane hgap="10" vgap="10">
            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="labelAdocaoId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="labelAdocaoData" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Usuário:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label fx:id="labelAdocaoUsuario" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="Pet:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label fx:id="labelAdocaoPet" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </VBox>
</AnchorPane>
