<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="adocaopets.controller.FXMLAnchorPaneCadastrosAdocoesDialogController"
            prefHeight="400.0" prefWidth="600.0">
    
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    
    <VBox spacing="10">
        <HBox spacing="10">
            <Label text="Usuário:"/>
            <ComboBox fx:id="comboBoxUsuarios" prefWidth="200"/>
        </HBox>
        
        <TableView fx:id="tableViewPets" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="columnNome" text="Nome" prefWidth="150"/>
                <TableColumn fx:id="columnEspecie" text="Espécie" prefWidth="100"/>
                <TableColumn fx:id="columnRaca" text="Raça" prefWidth="100"/>
            </columns>
        </TableView>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="buttonConfirmar" text="Confirmar" onAction="#handleButtonConfirmar"/>
            <Button fx:id="buttonCancelar" text="Cancelar" onAction="#handleButtonCancelar"/>
        </HBox>
    </VBox>
</AnchorPane> 